<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_list_night"
    android:orientation="vertical"
    android:id="@+id/viewScroll"
    android:layout_height="match_parent"
    tools:context=".MoreDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:background="@drawable/getmoredetailsbox"
            app:cardForegroundColor="@android:color/transparent"
            android:layout_height="270dp">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:fontFamily="@font/regular"
                android:layout_height="wrap_content"
                android:text="Hourly Forecast"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="0dp"
                android:background="@drawable/getmoredetailsbox"
                app:cardForegroundColor="@android:color/transparent"
                android:layout_height="match_parent">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="match_parent">

                      <androidx.recyclerview.widget.RecyclerView
                          android:id="@+id/recycle2"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                      </androidx.recyclerview.widget.RecyclerView>


                  </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:background="@drawable/getmoredetailsbox"
            app:cardForegroundColor="@android:color/transparent"
            android:layout_height="300dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Daily Forecast"
                android:textColor="@color/white"
                android:layout_margin="10dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/white"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardElevation="0dp"
            android:background="@drawable/getmoredetailsbox"
            app:cardForegroundColor="@android:color/transparent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleDaily"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>




        </com.google.android.material.card.MaterialCardView>



        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:background="@drawable/getmoredetailsbox"
            app:cardForegroundColor="@android:color/transparent"
            android:layout_height="360dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Astro and extra details"
                android:textColor="@color/white"
                android:layout_margin="10dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="0dp"
                android:background="@drawable/getmoredetailsbox"
                app:cardForegroundColor="@android:color/transparent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sunrise_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/sunrise" />

                        <ImageView
                            android:id="@+id/sunset_img"
                            android:layout_width="40dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/sunset" />

                        <ImageView
                            android:id="@+id/moonrise_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/moonrise" />

                        <ImageView
                            android:id="@+id/moonset_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/moonset" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sunrise_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunrise"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/sunset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/moonrise_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonrise"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/moonset_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sunrise_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunrise"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/sunset_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/moonrise_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonrise"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/moonset_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="4"
                        android:layout_marginTop="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/humidity_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/humidity" />

                        <ImageView
                            android:id="@+id/wind_img"
                            android:layout_width="40dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/wind" />

                        <ImageView
                            android:id="@+id/uv_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/uv" />

                        <ImageView
                            android:id="@+id/visi_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/visi" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Humidity"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/wind_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Wind Speed"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/uv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="uv radiation"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/visi_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Visibility"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:weightSum="4"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidity_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunrise"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/wind_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Sunset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/uv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonrise"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/visi_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Moonset"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>



                </LinearLayout>




            </com.google.android.material.card.MaterialCardView>






        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:background="@drawable/getmoredetailsbox"
            app:cardForegroundColor="@android:color/transparent"
            android:layout_height="360dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Current Air Quality"
                android:textColor="@color/white"
                android:layout_margin="10dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardElevation="0dp"
                android:background="@drawable/getmoredetailsbox"
                app:cardForegroundColor="@android:color/transparent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/aqi_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="110dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="130dp"
                    android:src="@drawable/aqi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="verdict"
                    android:id="@+id/aqi_text"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="130dp"
                    android:fontFamily="@font/regular"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="226dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aqi_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"
                        android:fontFamily="@font/regular"
                        android:text="verdict"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="227dp"
                    android:layout_height="81dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="65dp">

                    <TextView
                        android:id="@+id/aqi_result_advice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/regular"
                        android:text="verdict"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                </LinearLayout>


                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/aqi_last_img"
                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    />




            </com.google.android.material.card.MaterialCardView>




        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>


</ScrollView>